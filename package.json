{
  "name": "tslint-stencil",
  "version": "0.1.3-beta.7",
  "description": "Adds stylistic rules to tslint for Stencil projects",
  "keywords": [
    "tslint",
    "rules",
    "stencil",
    "stenciljs"
  ],
  "main": "rules/index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "compile": "tsc",
    "build": "rm -rf rules && npm run compile",
    "test": "tslint --test test/rules/**/*",
    "verify": "npm run build && npm run test",
    "publish": "node scripts/publish.js",
    "commit": "node scripts/commit.js"
  },
  "author": "Nate Moore",
  "contributors": [
    {
      "name": "Nate Moore",
      "email": "nate@natemoo.re",
      "url": "https://natemoo.re"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/natemoo-re/tslint-stencil.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^10.9.2",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1"
  }
}
