{
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "newLine": "LF",
        "noEmitOnError": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,

        "module": "commonjs",
        "target": "es5",
        "sourceMap": true,
        "outDir": "rules",
        "lib": ["es2015", "dom"]
    },
    "include": ["src/*.ts"]
}